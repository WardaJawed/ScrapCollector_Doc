<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".schome"
    android:orientation="vertical"
    android:padding="20dp"
    android:background="@drawable/wall">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Scrap collector PANEL"
        android:fontFamily="@font/heading"
        android:textColor="#7AD314"
        android:textSize="40dp"
        android:textAlignment="center"
android:layout_marginTop="50dp"
        />
   <Button
       android:id="@+id/btnapp"
       android:layout_width="match_parent"
       android:layout_height="100dp"
       android:layout_marginTop="50dp"
       android:background="@drawable/btn2"
       android:textColor="#0B0B0B"
       android:text="View Appointment"
       android:textSize="25dp"
       android:fontFamily="sans-serif-medium"
       android:padding="5dp"
       android:drawableTop="@drawable/ic_baseline_remove_red_eye_24"
       />
    <Button
        android:id="@+id/btnscrap"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn2"
        android:textColor="#040404"
        android:text="View Scraps "
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        android:drawableTop="@drawable/ic_baseline_remove_red_eye_24"
        android:padding="5dp"
        />
    <Button
        android:id="@+id/btnout"
        android:drawableTop="@drawable/ic_baseline_arrow_circle_left_24"
        android:padding="5dp"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginTop="50dp"
        android:background="@drawable/btn2"
        android:textColor="#000000"
        android:text="Logout"
        android:textSize="25dp"
        android:fontFamily="sans-serif-medium"
        />
</LinearLayout>